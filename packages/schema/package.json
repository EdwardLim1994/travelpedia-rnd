{
  "name": "travelpedia_schema",
  "private": true,
  "scripts": {
    "serve": "hive-gateway supergraph",
    "mesh": "mesh-compose -o supergraph.graphql",
    "compile": "./node_modules/.bin/protoc --plugin=./node_modules/.bin/protoc-gen-ts_proto.exe --ts_proto_out=./generated --ts_proto_opt=outputServices=grpc-js,env=node,esModuleInterop=true -I ./proto ./proto/*.proto"
  },
  "devDependencies": {
    "@graphql-mesh/compose-cli": "^1.5.9",
    "@omnigraph/grpc": "^0.2.12",
    "@types/bun": "latest",
    "ts-proto": "^2.11.0",
    "protoc": "^33.4.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@bufbuild/protobuf": "^2.10.2",
    "@graphql-hive/gateway": "^2.3.0",
    "@graphql-mesh/transport-grpc": "^0.3.22",
    "@grpc/grpc-js": "^1.14.3",
    "@grpc/proto-loader": "^0.8.0"
  }
}
